<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/input_corner_radius" />
            <solid android:color="@color/color_input_default" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/small_padding" android:left="@dimen/small_padding" android:right="@dimen/small_padding" android:top="@dimen/small_padding" />
            <solid android:color="@color/color_input_default" />
            <corners android:radius="@dimen/input_corner_radius" />
<!--            <stroke android:width="1dp" android:color="@color/color_input_stroke_focused" />-->
        </shape>
    </item>
</selector>