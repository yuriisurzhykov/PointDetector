<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <inset android:inset="2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/button_enabled_pressed_color" />
                <corners android:radius="@dimen/default_button_corner_radius" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <inset android:inset="2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/button_enabled_idle_color" />
                <corners android:radius="@dimen/default_button_corner_radius" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false" android:state_pressed="true">
        <inset android:inset="2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/button_disabled_pressed_color" />
                <corners android:radius="@dimen/default_button_corner_radius" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <inset android:inset="2dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/button_disabled_idle_color" />
                <corners android:radius="@dimen/default_button_corner_radius" />
            </shape>
        </inset>
    </item>
</selector>